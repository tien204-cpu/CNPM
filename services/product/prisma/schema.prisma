generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {
  id        String   @id @default(cuid())
  name      String
  price     Float
  imageUrl  String?
  description String?
  category  String?
  stock     Int      @default(100)
  createdAt DateTime @default(now())
  // Optional relation to a Restaurant (nhà hàng)
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
}

// Nhà hàng tại Việt Nam (Sài Gòn)
model Restaurant {
  id        String    @id @default(cuid())
  name      String
  address   String?
  lat       Float?
  lng       Float?
  products  Product[]
  createdAt DateTime  @default(now())
}

// Danh mục món ăn (để Admin chọn sẵn thay vì gõ tay)
model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
}
